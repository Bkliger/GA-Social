<h1>Add New Post</h1>

<%= form_for @post do |f| %>
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= f.text_area :body, class: "form-control", placeholder: "Body", autofocus: true %>
      </div>
    </div>
  </div>
<% end %>







<%= form_for [@city, @post] do |f| %>
<div class="row">
  <div class="well col-md-4 col-md-offset-4">
    <div class="form-group">
      <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control", placeholder: "Description", class: 'form-control', rows: '8' %>
    </div>
    <div>
      <center><%= f.submit "Save", class: "btn btn-success" %></center>
    </div>
  </div>
 </div>
<% end %>
